pipeline {
    agent any
    
    stages 
    {
        stage('Code Checkout') {
            steps {
                git 'https://github.com/fabiorollin/edureka.git'
            }
        }
        stage('Code Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Code Packaging') {
            steps {
                sh 'mvn package'
            }
        }
	    stage('Build Docker Image')
        {   steps {
                sh 'docker build -t abc_tech:$BUILD_NUMBER .'
                sh 'docker tag abc_tech:$BUILD_NUMBER fabiorollin/abc_tech:$BUILD_NUMBER'
                sh 'docker tag fabiorollin/abc_tech:$BUILD_NUMBER fabiorollin/abc_tech:latest'
            }

        }    
        stage('Push Docker Image')
        {
            steps{
                withDockerRegistry([ credentialsId: "dockerhub", url:""])
                {
                        sh 'docker push fabiorollin/abc_tech:$BUILD_NUMBER'
                        sh 'docker push fabiorollin/abc_tech:latest'
                
                }
            }
        }
        stage('Deploy as container')
        {
            steps{
                sh 'docker run -itd -P fabiorollin/abc_tech:$BUILD_NUMBER'
            }
        }
        stage('Deploy to k8s cluster')
        {
            steps{
                sh 'kubectl create -f deploy.yaml'
                sh 'kubectl create -f svc.yaml'
            }
        }
    }
}
